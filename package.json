{
  "name": "monorepo-next",
  "version": "3.2.3",
  "description": "Detach monorepo packages from normal linking",
  "bin": {
    "next": "bin/index.js"
  },
  "main": "src",
  "files": [
    "bin",
    "src"
  ],
  "keywords": [
    "attach",
    "changed",
    "conventional-changelog",
    "conventional-commits",
    "dag",
    "detach",
    "graph",
    "link",
    "npm",
    "publish",
    "release",
    "run",
    "standard-version",
    "tag",
    "version",
    "workspaces",
    "yarn"
  ],
  "scripts": {
    "lint:git": "commitlint",
    "lint:js": "eslint . --ext js,json",
    "lint:md": "remark -f README.md",
    "start": "./bin/index.js",
    "release": "standard-version --commit-all",
    "test": "mocha"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yargs-help-output README.md --npm-script-name start",
      "precommit": "git add README.md",
      "posttag": "git push --follow-tags --atomic"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/CrowdStrike/monorepo-next.git"
  },
  "author": "Kelly Selden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CrowdStrike/monorepo-next/issues"
  },
  "homepage": "https://github.com/CrowdStrike/monorepo-next#readme",
  "engines": {
    "node": ">=10.12"
  },
  "dependencies": {
    "conventional-changelog": "3.1.24",
    "conventional-recommended-bump": "6.1.0",
    "execa": "^5.0.0",
    "glob": "^7.1.4",
    "inquirer": "^7.0.0",
    "minimatch": "^3.0.4",
    "semver": "7.3.4",
    "standard-version": "9.1.1",
    "yargs": "^16.0.0"
  },
  "devDependencies": {
    "@crowdstrike/commitlint": "^3.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "eslint-config-crowdstrike": "^3.0.0",
    "eslint-config-crowdstrike-node": "^3.0.0",
    "eslint-plugin-json-files": "0.8.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.0.0",
    "fixturify": "^2.0.0",
    "git-fixtures": "^3.0.0",
    "mocha": "^8.0.0",
    "mocha-helpers": "^5.1.0",
    "remark-cli": "^9.0.0",
    "remark-preset-lint-crowdstrike": "^2.0.0",
    "renovate-config-standard": "^2.0.0",
    "sinon": "^9.0.0",
    "sinon-chai": "^3.3.0",
    "tmp": "0.2.1",
    "yargs-help-output": "^1.0.4"
  }
}
