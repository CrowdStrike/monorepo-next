  },
  "main": "src",
  "files": [
    "bin",
    "src"
  ],
  "keywords": [
    "attach",
    "changed",
    "conventional-changelog",
    "conventional-commits",
    "dag",
    "detach",
    "graph",
    "link",
    "npm",
    "publish",
    "release",
    "run",
    "standard-version",
    "tag",
    "version",
    "workspaces",
    "yarn"
  ],
  "scripts": {
